<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/responseLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/sendLayout"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcl_chat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:listitem="@layout/item_chat"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sendLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/margin10"
            android:paddingEnd="@dimen/margin10"
            android:paddingBottom="@dimen/margin10">

            <EditText
                android:id="@+id/message"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginEnd="@dimen/margin10"
                android:layout_weight="0.80"
                android:background="@drawable/rectangle_outer_box"
                android:drawableTint="@color/colorPrimary"
                android:hint="Write a comment here"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textAppearance="@style/Textstyle12SizeRegular"
                android:textColor="@color/login_attributes_color"
                android:textSize="14dp"/>


            <ImageView
                android:id="@+id/sendButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/send_button_outer_circle"
                android:padding="@dimen/margin10"
                android:src="@drawable/ic_menu_send"
                android:tint="@color/textColor" />
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/noItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin40"
        android:text="No chat found"
        android:textAppearance="@style/Textstyle18SizeBold"
        android:textColor="@color/colorPrimary" />
</LinearLayout>
