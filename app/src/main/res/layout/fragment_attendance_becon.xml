<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".attendance.AttendanceFragment"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        >


        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.08">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Attendance History"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/colorPrimary" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin10"
                android:background="@drawable/rectangle_outer_box_top_radius"
                android:orientation="vertical"
                android:id="@+id/history">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="4">


                    <TextView
                        android:id="@+id/dateHeading"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/margin40"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@drawable/rectangle_outer_box_one_side_radius_top_left"
                        android:fontFamily="@font/montserrat"
                        android:gravity="center"
                        android:text="Date"
                        android:textAllCaps="false"
                        android:textColor="@color/textColor"
                        android:textFontWeight="300"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/timeHeading"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/margin40"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Time-In"
                        android:textSize="12sp"
                        android:textAllCaps="false"
                        android:textFontWeight="300"
                        android:fontFamily="@font/montserrat"
                        android:textColor="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/statusHeading"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/margin40"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@drawable/rectangle_outer_box_one_side_radius_top_right"
                        android:gravity="center"
                        android:text="Status"
                        android:textSize="12sp"
                        android:textAllCaps="false"
                        android:textFontWeight="300"
                        android:fontFamily="@font/montserrat"
                        android:textColor="@color/textColor" />

                    <TextView
                        android:id="@+id/timeOutHeading"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/margin40"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Time-Out"
                        android:textSize="12sp"
                        android:textAllCaps="false"
                        android:textFontWeight="300"
                        android:fontFamily="@font/montserrat"
                        android:textColor="@color/colorPrimary" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/attendanceHistoryRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/noItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin40"
            android:text="No attendance found"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>