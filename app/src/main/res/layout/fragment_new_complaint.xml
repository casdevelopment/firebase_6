<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/viewPortComplaints"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        tools:context=".complaint.NewComplaintFragment">


        <EditText
            android:id="@+id/titleComplaint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin10"
            android:background="@drawable/rectangle_outer_box"
            android:hint="Enter the title"
            android:inputType="text"
            android:maxLength="50"
            android:paddingStart="@dimen/margin15"
            android:paddingTop="@dimen/margin15"
            android:paddingEnd="@dimen/margin15"
            android:paddingBottom="@dimen/margin15"
            android:singleLine="true"
            android:textSize="12sp"
            android:textAllCaps="false"
            android:textFontWeight="300"
            android:fontFamily="@font/montserrat"
            />

        <TextView
            android:id="@+id/titleError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:includeFontPadding="false"
            android:labelFor="@+id/titleComplaint"
            android:text="Please enter phone number like (923001234567)"
            android:textColor="@color/colorPrimary"
            android:textSize="12dp"
            android:layout_marginTop="4dp"
            android:visibility="gone" />

        <EditText
            android:id="@+id/complaintText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin10"
            android:background="@drawable/rectangle_outer_box"
            android:hint="Write your complaint message"
            android:inputType="textMultiLine"
            android:maxLength="200"
            android:minHeight="120dp"
            android:paddingStart="@dimen/margin15"
            android:layout_gravity="start"
            android:gravity="start"
            android:paddingBottom="@dimen/margin15"
            android:paddingTop="@dimen/margin15"
            android:paddingEnd="@dimen/margin15"
            android:textSize="12sp"
            android:textAllCaps="false"
            android:textFontWeight="300"
            android:fontFamily="@font/montserrat"
            />

        <TextView
            android:id="@+id/complaintError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:includeFontPadding="false"
            android:labelFor="@+id/complaintText"
            android:text="Please enter Complaint Description"
            android:textSize="12dp"
            android:layout_marginTop="4dp"
            android:textColor="@color/colorPrimary"
            android:visibility="gone" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/submitComplaint"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/margin10"
            android:text="Submit"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:textFontWeight="300"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/textColor"
            app:cornerRadius="@dimen/margin5"
            app:strokeColor="@color/colorPrimary" />
    </LinearLayout>
</layout>