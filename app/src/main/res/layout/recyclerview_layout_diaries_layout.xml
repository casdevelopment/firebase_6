<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/smsItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_shape_with_border"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingStart="@dimen/margin10"
        android:paddingEnd="@dimen/margin10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/margin5">

            <RelativeLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/rectangle_box_with_solid_border">

                <TextView
                    android:id="@+id/subjectFirstLetter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:textAllCaps="false"
                    android:textColor="@color/textColor"
                    android:textSize="22sp"
                    android:textStyle="bold" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/margin10"
                android:layout_weight="0.60"
                android:orientation="vertical"
                android:paddingTop="@dimen/margin10"
                android:paddingBottom="@dimen/margin10">

                <TextView
                    android:id="@+id/subjectName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/createdBy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:textSize="12sp"
                    android:textAllCaps="false"
                    android:textFontWeight="300"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/login_attributes_color" />

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/download"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.30"
                android:includeFontPadding="false"
                android:paddingStart="@dimen/margin5"
                android:paddingTop="@dimen/margin10"
                android:paddingEnd="@dimen/margin5"
                android:paddingBottom="@dimen/margin10"
                android:text="Download"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:textFontWeight="300"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/textColor"
                app:cornerRadius="@dimen/margin5"
                app:strokeColor="@color/colorPrimary" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/margin5">

            <TextView
                android:id="@+id/diaryNotes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textAllCaps="false"
                android:textFontWeight="300"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/login_attributes_color" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginBottom="@dimen/margin5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/m"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="M"
                    android:textSize="12sp"
                    android:textAllCaps="false"
                    android:textFontWeight="300"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/login_attributes_color" />

                <TextView
                    android:id="@+id/t"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin5"
                    android:text="T"
                    android:textSize="12sp"
                    android:textAllCaps="false"
                    android:textFontWeight="300"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/login_attributes_color" />

                <TextView
                    android:id="@+id/w"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin5"
                    android:text="W"
                    android:textSize="12sp"
                    android:textAllCaps="false"
                    android:textFontWeight="300"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/login_attributes_color" />

                <TextView
                    android:id="@+id/th"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin5"
                    android:text="T"
                    android:textSize="12sp"
                    android:textAllCaps="false"
                    android:textFontWeight="300"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/login_attributes_color" />

                <TextView
                    android:id="@+id/f"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin5"
                    android:text="F"
                    android:textSize="12sp"
                    android:textAllCaps="false"
                    android:textFontWeight="300"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/login_attributes_color" />

                <TextView
                    android:id="@+id/s"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin5"
                    android:text="S"
                    android:textSize="12sp"
                    android:textAllCaps="false"
                    android:textFontWeight="300"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/login_attributes_color" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</layout>