<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:background="@drawable/login_background_image"
        android:descendantFocusability="beforeDescendants"
        android:focusable="true"
        tools:context=".signup.SignUpActivity">


        <LinearLayout
            android:id="@+id/phoneNoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin15"
                android:includeFontPadding="false"
                android:padding="5dp"
                android:text="Old Password"
                android:textColor="@color/textColor"
                android:textSize="14sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin5"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/colorWhite">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etOldPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_edit_text_bottom_border"
                    android:drawableTint="@color/colorWhite"
                    android:focusableInTouchMode="true"
                    android:inputType="textPassword"
                    android:lineSpacingExtra="0dp"
                    android:padding="0dp"
                    android:textColor="@color/textColor"
                    android:textSize="14sp" />

            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:id="@+id/oldPasswordError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:labelFor="@+id/phoneNo"
                android:layout_marginTop="3dp"
                android:text="Password should be atleast 8 characters long"
                android:textColor="@color/colorWhite"
                android:visibility="gone"
                android:textSize="12sp"
                android:textAllCaps="false"
                android:textFontWeight="300"/>
            <TextView
                android:layout_marginTop="@dimen/margin20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:padding="5dp"
                android:text="New Password"
                android:textColor="@color/textColor"
                android:textSize="14sp" />
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin5"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/colorWhite">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etNewPassword"
                    android:layout_width="match_parent"
                    android:padding="0dp"
                    android:lineSpacingExtra="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_edit_text_bottom_border"
                    android:drawableTint="@color/colorWhite"
                    android:focusableInTouchMode="true"
                    android:inputType="textPassword"
                    android:textColor="@color/textColor"
                    android:textSize="14sp"
                    />


            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:id="@+id/newPasswordError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:labelFor="@+id/phoneNo"
                android:layout_marginTop="3dp"
                android:text="Password should be atleast 8 characters long"
                android:textColor="@color/colorWhite"
                android:visibility="gone"
                android:textSize="12sp"
                android:textAllCaps="false"
                android:textFontWeight="300"/>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/updateButton"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:text="Update"
                android:textAllCaps="true"
                android:textColor="@color/textColor"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>